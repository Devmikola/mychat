<% provide(:title, 'Edit chat: ' + @chat.name) %>
<h1>Edit chat: <%= @chat.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @chat, url: edit_chat_post_path(@chat), method: 'post' do |f| %>
      <%= render 'shared/error_messages', subject: @chat %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :members %>
      <%= f.text_area :members, rows: 4, style: "resize: none" %>

      <%= f.submit "Update chat", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>